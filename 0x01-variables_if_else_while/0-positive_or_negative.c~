#include <stdlib.h>
#include <time.h>
/* more headers goes there */

/* betty style doc for function main goes there */
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	/* your code goes there */
	if (n <= 0.0)
	  {
	    if (n == 0.0)
	      printf("%03.3f is zero\n", n);
	    else
	      printf("%03.3f is negative\n", n);
	  }
	else
	  printf("%03.3f is positive\n", n);
	return (0);
}
